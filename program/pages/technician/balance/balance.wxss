.balance{
  position: relative;
  width: 100%;
  height: 100%;
  background: #F9F9F9;
  overflow: hidden;
}
.record{
  width: 345px;
  height: 31px;
  color: #676767;
  font-size:13px;
  text-align: center;
  border:1px solid #282828;
  line-height: 31px;
  border-radius: 5px;
  box-sizing: border-box;
}

.money{
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
}
image{
  width: 85px;
  height: 84px;
  border-radius: 50%;
  margin: 49px 0 32px 0;
}
.number{
  
  font-weight: bold;
  font-family:PingFang SC;
  color: #000000;
}
.number text:nth-child(1){
  font-size: 25px;
}
.number text:nth-child(2){
  font-size: 25px;
}
.ban1 button{
  margin-top: 70px;
  margin-bottom: 16px;
  width: 345px;
  height: 31px;
  background: #61B7F9;
  color:#fff;
  text-align: center;
  line-height: 31px;
  font-size: 13px;
}
.active{
  transform: translateY(-100%);
}
.model{
  position: absolute;
  width: 100%;
  height: 100%; 
  background: #F9F9F9;
  z-index: 10;
  transition: all .3s;
  transition-timing-function:linear;
  bottom: -100%;
  
}

.model .putForward{
  margin: 30px auto;
  width: 345px;
  
  border-radius: 10px;
}
.putForward .header{
  height: 45px;
  padding: 15px;
  position: relative
}
.header::after{
  position: absolute;
  top:0;
  left: 0;
  content:"";
  width: 345px;
  height: 60px;
  background-color: #cccccc;
  opacity: .2;
}
.header text{
  font-size: 12px;
  margin-right: 15px;
  color: #000000;
}
.header text:nth-child(2){
  color:#abaaaa;
}
.border{
  width: 100%;
  background: #ffffff;
  padding: 15px;
  box-sizing: border-box;
}
.border .tiQ{
  font-size: 14px;
}
.border .numbers{
  margin-top: 30px;
  color: #000;
  display: flex;
  align-items: center;
}

 .numbers text{
   font-size: 36px;
 }
 .numbers input{
   height: 80px;
   line-height: 80px;
   min-height: 80px;
   padding-left: 5px;
   font-size: 40pt;
   
 }
 
 .ban{
   margin-top: 30px;
 }
 .ban button{
   height: 40px;
   background: #66cc66;
   line-height: 40px;
   color: #fff;
 }
 .ban button[disabled]{
   background: #66cc66;
   opacity: .5;
   color: #fff;
 }