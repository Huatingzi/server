@import "../../../common/iconFont.wxss";
page{
  background: #FAF9F9;
  
}
.header{
  display: flex;
  flex-direction: column;
}
.title{
  color: #000;
  font-size: 12px;
  margin-left: 16px;
  width:20%;
}

.picture{
   height: 64px;
   justify-content: space-between;
   margin-top: 5px;
   background: #fff;
}
.picture .right{
  width: 40px;
  height: 40px;
 
  margin-right: 15px;
  position: relative;
}
.picture .right image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  /* position:relative; */
  background: #F1F1F1;
  
}

.name{
  height: 40px;
  background: #fff;
  border-top:1px solid #F1F1F1;
  font-size: 12px;
  justify-content: space-between;
}
.name input{
  padding-right:15px; 
  padding-left: 5px;
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  text-align: right;
}
.phoneNumber{
  height: 40px;
  background: #fff;
  border-top: 1px solid #F1F1F1;
  justify-content: space-between;
}
.phoneNumber .phone{
  font-size: 12px;
  padding-left: 5px;
  height: 100%;
  flex-grow: 1;
  line-height: 40px; 
}
.phoneNumber button{
  background: #2296FC;
  width:71px;
  height: 21px;
  color: #fff;
  font-size:12px;
  line-height: 21px;
  border-radius: 11pt;
  margin: 0 15px 0 0;
  padding-left: 0;
  padding-right: 0;
}
.wxNumer{
  background: #FFFFFF;
  height: 40px;
  border-top: 1px solid #F1F1F1;
  
}
.wxNumer input{
  font-size: 12px;
  padding-right:15px; 
  padding-left: 5px;
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  text-align: right;
}
.uploadZ,.uploadB{
  height: 172px;
  width: 375px;
  background: #fff;
  position: relative;
  font-size: 0;
  
}
.uploadZ image,.uploadB image{
  width: 90%;
  height: 90%;
  position: relative;
  margin: 2% 5%;

}
.uploadZ .icon-jia,.uploadB .icon-jia{
  position: absolute;
  left:50%;
  margin-left:-50px;
  top:20px;
  font-size: 100px;
  color: #D1D1D1;
}
.uploadZ,.uploadB{
  margin: 5px 0;
}
.uploadZ .text,.uploadB .text{
  color: #ACACAC;
  font-size: 12px;
  position: absolute;
  bottom:15px;
  left: 50%;
  margin-left: -60px;
}
.confirm{
  padding: 0  15px;
  box-sizing: border-box;
  margin:50px 0;
}
.confirm button{
  background: #61B7F9;
  color: #fff;
  border-radius: 5px;
  height: 35px;
  line-height: 35px;
  
}