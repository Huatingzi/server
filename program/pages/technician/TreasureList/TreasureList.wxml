              </view>
              <view>
                <text>电话:</text>
                <text>xxxxxxx</text>
              </view>
            </view>
            <view class="right">
              <button>
                <text class="iconfont icon-dizhi"></text>
              </button>
              <button>
                <text class="iconfont icon-dianhua"></text>
              </button>
            </view>
          </view>
        </view>
      </view>
    </swiper-item>
  </swiper>
</view>