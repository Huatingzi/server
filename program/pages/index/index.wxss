/**index.wxss**/
@import "/template/loading/loading";
input{
  height: 30px;
  min-height: 30px;
}
.dis1{
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  flex-wrap: nowrap;
}

.dis3{
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.head{
  width: 100%;
  height: auto;
  background:linear-gradient(rgba(97,183,249,1),rgba(255,255,255,1));
}
.new{
  width: 100%;
  height: 50px;
  box-sizing: border-box;
  justify-content: space-around;
}
.new-dwei{
  width: 40%;
  height: 30px;
  line-height: 30px;
  margin-top: 8px;
  margin-left: 15px;
  justify-content: space-around;
  align-items: center;
}
.new-dwei text{
  width:110px;
  height:30px;
  float: left;
  font-size: 16px;
  margin-left: 6px;
  font-family:PingFang-SC-Regular;
  color:rgba(255,255,255,1);
}
.sou{
  width: 50%;
  height: 30px;
  float: right;
  margin-top: 8px;
  margin-right: 15px;
  background: #A6D6FB;
  border-radius: 5px;
  border: 1px solid #fff;
  justify-content: space-around;
  align-items: center;
  align-content: center;
}
.sou-input{
  font-size: 16px;
  line-height: 30px;
  /* vertical-align: middle; */
  margin: 0 5px;
}
.new-img{
  width: 100%;
  height: 250px;
}

.math{
  width: 90%;
  height: 100px;
  margin: 0 auto;
  padding: 20px 0;
  justify-content: space-around;
}
.fuwu{
  height: 100px;
  float: left;
}

.fuwu:nth-child(2) {
}

.math_d{
  width: 40pt;
  height: auto;
  margin: 0 auto;
  margin-top: 10px;
}

.math_d text{
  width:40pt;
  height:19px;
  float: left;
  text-align: center;
  font-size:20px;
  font-family:PingFang-SC-Regular;
  color:rgba(40,40,40,1);
}

.math_d image{
  width: 40pt; 
  height: 40pt; 
  float: left;
}
.recommend{
  width: 100%;
  height: auto;
  margin-bottom: 20px;
}
.rec{
  width: 90%;
  height: 14px;
  line-height: 14px;
  margin: 0 auto;
  cursor: pointer;
  justify-content: space-between;
}
.rec text{
  width:80px;
  height:14px;
  float: left;
  font-size:14px;
  font-family:PingFang-SC-Regular;
  color:rgba(40,40,40,1);
}
.img_rec{
  width: 5px;
  height: 11px;
  float: right;
  
}
.rec_viem{
  width:90%;
  height: auto;
  margin:  0 auto;
  justify-content: space-around;
}

.rec_img{
  width: 160px;
  height: 103px;
  margin-top: 15px; 
  justify-content: space-between;
  border-radius: 5px;
}

.sou_btu{
  width: 25px;
  height: 30px;
  line-height: 30px;
  text-align: center;
  color: white;
  font-size: 16px;
  border-radius: 5px;
  background: rgba(245,245,245, 0);
  padding: 0 5px;
}
