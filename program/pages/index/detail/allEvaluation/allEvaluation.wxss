page{
  height:100%;
  background: #F7F7F7;
}
.listItem{
  width: 100%;
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #F0EEEE;
}
.top{
  display: flex;
  justify-content: space-between;
}
.user{
  
  display: flex;
  align-items: center;
}
.user image{
  width: 40px;
  height: 40px;
  background:#ccc; 
  border-radius: 50%;
  margin: 16px 11px 10px 15px;
}
.user view{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 40px;
}
.user view .username{
  color: #000000;
  font-size: 12px;
  font-weight: bold;
 
}
.user view .program{
  color: #000000;
  font-size: 10px;
}
.time{
   color: #000000;
   font-size: 10px;
   margin: 18px 15px 0 0;
}
.main{
  color: #000000;
  font-size: 12px;
  margin-left:16px;
  margin-bottom:15px; 
}