page{
  background: #ECECEC;
}
form{
  width: 100%;
  height: 100%;
  
}
form textarea{
  margin: 15px auto 35px auto;
  width: 345px;
  height: 150px;
  background: #fff;
  border-radius: 5px;
  padding: 15px;
  box-sizing: border-box;
  font-size: 14px;
}
form button{
  margin: 0 15px;
  width: 345px;
  height: 30px;
  background: #61b7f9;
  color: #fff;
  line-height: 30px;
}

button[disabled]{
  color: #DCDCDC !important;
  background-color:#898989 !important;
}