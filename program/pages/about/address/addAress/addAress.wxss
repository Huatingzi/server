
page{
  height: 100%;
  background: #F0EEEE;
  z-index: 999;
  
}
.addressInfo{
  width: 100%;
  height: 100%;
  margin-bottom: 20px;
}
 .addressInfo .add{
  margin-top: 10px;
  width: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
  height: 100%;
  overflow: hidden;
}
.add text{
  font-size: 12px;
}
label{
  background: #fff;
  width: 100%;
  height: 45px;
  line-height: 45px;
  display: flex;
  
  border-bottom: 1px solid #F0EEEE;
  align-items: center;
}

label text:first-child{
  margin-left: 16px;
  
}

label input{
  height: inherit;
  padding-left: 8px;
  flex-grow:1;
  font-size: 12px;
}
label:first-child text:first-child{
  width: 48px;
}
label:nth-child(3){
  display: flex;
}
label:nth-child(3) .select{
  height: inherit;
  flex-grow: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
label:nth-child(3) .select text:nth-child(1){
  color:#707070;
}
label:nth-child(3) .select text:nth-child(2){
  display: block;
  width: 6px;
  height:11px;
  background: url('http://smb.fjsmb.com/static/lib/img/back.png') no-repeat center center;
  background-size: 6px 11px;
  transform: rotate(180deg);
  margin: 0 15px 0 21px;
}
textarea{
  height: 78px;
  width: 100%;
  background: #fff;
  font-size: 11px;
   padding: 10px 15px;
  box-sizing: border-box;
}
.default{
  display: flex;
  width: 100%;
  justify-content: space-between;
  margin-top: 10px;
  border: none;
}
.default checkbox{
  padding-right: 15px;
}
.save{
  background:#F0EEEE;
  margin-top: 20px;
}
.save button{
  width: 300px;
  height: 40px;
  background: #60B7F9;
  color: #fff;
  line-height: 40px;

}
.pick{
  position: absolute;
  bottom: 0;
  width: 100%;
}