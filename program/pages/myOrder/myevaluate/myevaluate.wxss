page{
  background: #F9F9F9;
  height: 100%;

}
.evaluate{
  display: flex;
  
  width: 100%;
  height: 146px;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  border-bottom: 1px solid #E9E9E9;
}
.evaluate text{
  font-weight: bold;
  font-size: 12px;
  color: #707070;
  margin-bottom: 15px;
}

.pingyu{
  width: 100%;
}
.pingyu text{
  font-size: 14px;
  color: #707070;
  margin-left: 16px;
  margin-top: 15px;
  font-weight: bold;
}
.pingyu textarea{
  width: 100%;
  padding: 15px;
  box-sizing: border-box;
  color: #707070;
  font-size: 14px;
  
}
.pingyu button{
  width: 200px;
  height: 35px;
  line-height: 35px;
  background: #60B7F9;
  color: #fff;
  position: relative;
}
.pingyu button::after{
  border:0;
}
.total{
  padding-left: 2px;
  padding-right: 2px;
  width: 150px;
  height: 32px;
  border-radius: 10px;
  background:rgba(0, 0, 0, 0.5);
  text-align: center;
  line-height: 32px;
  transition: all 1s;
  color: #fff;
  font-size: 13px;
  margin: 20px auto;
  display: none;
}
