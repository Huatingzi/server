.Selection{
  width: 100%;
  height: 90px;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  align-items: center;
  border-bottom: 1px solid #E9E9E9;
}

.Selection .border{
  border-radius: 13px;
  background: #E5E5E5;
  line-height: 25px;
  height: 25px;
  text-align: center;
  padding: 1px 2px;
  color:#282828;
  font-size: 13px;
  margin:0 14px;
}

.Selection .active{
  background: #60B7F9;
  color: #fff;
}